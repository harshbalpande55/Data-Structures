#include <stdio.h>
using namespace std

struct element{
    int i;
    int j;
    int x;
};

struct sparse{
    int m;
    int n;
    int num;
    struct element *e;
};

void create(struct sparse *s){
    cout<<"enter dimensions"<<"\n";
    cin>> &s->m >> &s->n;
    cout<<"enter no of non-zero elements"<<"\n";
    cin>> &s->num;
    s->e = new element[s->num];
    cout<"enter all element"<<"\n";
    for(int i=0;i<s->num ;i++){
        cin>>&s->e[i].i>>&s->e[i].j>>&s->e[i].x;
 }



};

int main(){
    struct sparse s;
    create(&s);
}